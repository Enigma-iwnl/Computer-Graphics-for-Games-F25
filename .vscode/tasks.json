{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure (Sandbox)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-DENABLE_SANDBOX=ON"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Configures the project with sandbox mode enabled."
        },
        {
    "label": "CMake: Configure (No Sandbox)",
    "type": "shell",
    "command": "cmake",
    "args": [
        "-S",
        "${workspaceFolder}",
        "-B",
        "${workspaceFolder}/build",
        "-DENABLE_SANDBOX=OFF"
    ],
    "group": "build",
    "problemMatcher": [],
    "detail": "Configures the project with sandbox mode disabled."
},
        {
            "label": "build-opengl",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lGL",
                "-lGLU",
                "-lglut"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$clang"
            ]
        },
        {
            "label": "Run OpenGLApp",
            "type": "process",
            "command": "${workspaceFolder}/build/OpenGLApp",
            "dependsOn": [
                "CMake: Build"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}